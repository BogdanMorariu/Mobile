<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pf.bogdan.pharmacy.OrderMedicineActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:text="Order Medicine"
        android:textSize="24dp"
        tools:layout_editor_absoluteX="41dp" />

    <EditText
        android:id="@+id/orderMedicineName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/medicine_name"
        android:layout_margin="8dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/orderMedicineProducer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/medicine_producer"
        android:layout_margin="8dp"
        android:textSize="14sp" />

    <NumberPicker
        android:id="@+id/quantityPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </NumberPicker>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Submit"
        android:onClick="orderMedicine"/>

</LinearLayout>
